<!doctype html><html>
<head><title><%= title %></title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link rel="stylesheet" type="text/css" href="/static/main.css" />
<link rel="stylesheet" type="text/css" href="/static/aristo/aristo.min.css" />
</head>
<body>
<div class='headall'>
  <h1><%= title %></h1>
  <p>
    <b>[</b> <%= link_to 'лента' => 'index' %> <b>]</b>&nbsp
    <!--b>[</b> <%= link_to 'получить сообщения' => 'get' %> <b>]</b>&nbsp-->
    <b>[</b> <%= link_to 'параметры' => 'config' %> <b>]</b>&nbsp
    <!--b>[</b> <%= link_to 'моя переписка' => 'me' %> <b>]</b>&nbsp-->
    <b>[</b> <%= link_to 'неотправленные сообщения' => 'out' %> <b>]</b>&nbsp
    <b>[</b> <%= link_to 'выход' => 'logout' %> <b>]</b>&nbsp
  </p>
</div>
<% my $link_block = begin %>\
<hr><%= link_to 'index' => begin %>Назад<% end %>\
<% end %>\
<% my $index_block = begin %>\
% my @echoes = @_;
<div class='echo'>
% for (@echoes) {
%=  link_to $_ => '/echo/'.$_ ;
<br>\
% }
</div>
<% end %>\
<script type="text/javascript" src="/static/functions.js"></script>
% if (stash('echoindex')) {
%== $index_block->(@{stash('echoindex')})
% }
% if (flash('message')) {
<div class='message'><p><%= flash('message') %></p></div>
% }
% if (flash('error')) {
<div class='error'><p><%= flash('error') %></p></div>
% }
<%= content %>\
% if ($title =~ /:::/){
%== &$link_block
% }
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1/jquery-ui.min.js"></script>
<script type="text/javascript" src="/static/main.js"></script>
</body>
</html>

